							<span>Transcripts</span>
						</a>
					</li>

				</ul>
			</section>
			<!-- /.sidebar -->
		</aside>
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<section class="content-header">
				<h1>
					Read
					<small></small>
				</h1>
				<ol class="breadcrumb">
					<li><a href="/"><i class="fa fa-tachometer"></i> Home</a></li>
					<li><a href="/materials"><i class="fa fa-book"></i> Materials</a></li>
					<li class="active">Read</li>
				</ol>
			</section>

			<!-- Main content -->
			<!-- Main content -->
			<section class="content">
				<div class="row">

					<div class="col-sm-3 col-md-4">
						<ul class="list-group">
							{{#each chapters}}
							<a href="/read/{{ this._id}}">
								<li class="list-group-item">{{ this.title}}</li>
							</a>
							{{/each}}
						</ul>
					</div>

					{{{ body }}}
				</div>


		</div>

		</section>
